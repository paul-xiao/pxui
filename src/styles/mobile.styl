$mobile-font = 1rem
@media (max-width: 1024px)
  html,body,#app
    font-size:$mobile-font
    width: 100%
    height 100%
    overflow-x hidden
    position fixed
    top 0
    left 0
    z-index: 0
  .theme-container
    height 100%
    .theme-header
      width: 100%
      padding: 0
      text-align: center
      .nav-bar
        position absolute
        width: 60px
        height: 60px
        left: 0
        top: 0
        z-index 10
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column
        span
          background: #FFF
          width: 30px
          height: 3px
          display block
          margin-top: 3px
      .nav
        background: lighten($theme-color, 5%)
        position absolute
        height: 100%
        width: 260px
        text-align: left
        align-items: flex-start
        left -500px
        top 0
        transition: left ease-in-out 0.1s
        z-index: 11
        display flex
        justify-content flex-start
        flex-direction: column
        .title
          height 60px
          width: 100%
          border-bottom: 1px solid lighten($theme-color, 15%)
          h4
           margin: 0
           padding: 0 $base-padding
           color: $white
           font-size: 20px
        ul, .search-box
          display block
        .nav-bar
          display none
        .side-close
          display block
          position: absolute
          right: 15px
          top: 15px
          width: 20px
          height: 20px
          line-height: 20px
          text-align: center
          &:before
            content: "\0274C"
            color: #FFF 
            font-size: 20px
        ul
          width: 100%
          padding: 0
          &>li
            display block
            a
              display block
            &:hover, &:active, &.active
              background: lighten($theme-color, 15%)
        .search-box
          display none  
        &.side-on
          left: 0
          &:after
            content: ''
            position: fixed
            width: 100%
            height: 100%
            background: rgba(0,0,0,0.1)
            right: 0
            top: 0
            z-index: -1
            pointer-events: none
    .theme-content
      width: "calc(100% - %s)" % ($base-padding*2)
      height: "calc(100% - %s)" % ($head-height*2 + $base-padding*2 + 2)
      min-height: auto
      overflow: auto
      padding: $base-padding
      display: block
      -webkit-overflow-scrolling: touch // safari smooth srcoll
      .content__default__wrap
      .content_default-title
        height auto
        line-height: 1.5
        small
          display block
      .content__default
        padding: $base-padding 0    
      .side-archives    
        display none
    .theme-footer
      width: 100%
      padding: 0